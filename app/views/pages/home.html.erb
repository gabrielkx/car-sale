<!-- new.html.erb -->

<h1>Registrar Novo Carro</h1>

<%= form_with(model: @car, local: true) do |form| %>
  <div class="field">
    <%= form.label :make %>
    <%= form.text_field :make %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="actions">
    <%= form.submit "Registrar Carro" %>
  </div>
<% end %>
